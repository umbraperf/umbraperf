{
    "compilerOptions": {
        "outDir": "./build/ts/",
        "module": "es2020",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "strict": true,
        "types": ["node"],
        "jsx": "react",
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "baseUrl": ".",
        "skipLibCheck": true
    },
    "exclude": ["./test/**/*.ts", "node_modules"],
    "include": ["./src/**/*", "./types/*.d.ts"]
}
